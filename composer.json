{
    "name": "codekanzlei/cake-frontend-bridge",
    "description": "A JS framework which implements the conventions of CakePHP controllers",
    "license": "MIT",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "^4.0.0",
        "cakephp/bake": "^2.0.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11",
        "scherersoftware/coding-standard": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "FrontendBridge\\": "src"
        }
    },
    "scripts": {
        "check": [
            "@php-check",
            "@phpstan"
        ],
        "php-check": "vendor/bin/phpcs -p --colors --standard=vendor/scherersoftware/coding-standard/scherersoftware ./src",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -l 5 ./src"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
